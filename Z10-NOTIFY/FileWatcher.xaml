<Window x:Class="Z10_NOTIFY.FileWatcher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Z10_NOTIFY"
        mc:Ignorable="d"
        Title="FileWatcher" Height="450" Width="800">
    <Grid>
        <Button Content="Wybierz plik" HorizontalAlignment="Left" FontSize="18" Margin="620,10,0,0" VerticalAlignment="Top" Width="164" Height="51" Click="Button_Click"/>
        <TextBox x:Name="fileContentTextBox" HorizontalAlignment="Left"  Height="400" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding Content}" VerticalAlignment="Top" Width="605"/>
        <Button Content="Ręczne odświeżanie" HorizontalAlignment="Left" FontSize="18" Margin="620,66,0,0" VerticalAlignment="Top" Width="164" Height="51" Click="Button_Click_1"/>

    </Grid>
</Window>